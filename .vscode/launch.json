            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "version"
            ],
        },
        {   
            "name": "ðŸ”ƒ Load Source",
